{% extends 'base.html.twig' %}


{% block body %}


<div class="w-full">
    <h1 class="my-10 text-4xl border-b border-gray-400 pb-2">Posts Pizza üçï</h1>

    <div class="w-full">
        {% for post in posts %}
        <div class="block border-b border-gray 400 px-2 mb-10 ">
            <h2 class="text-2xl font-bold mb-5">
                {{ post.title}}
            </h2>
            <a href="{{ path ('app_show', {slug: post.slug}) }}"
            class="font-bold text-blue-600 hover:underline">Read Now</a>
        </div>
        {% else %}
            <h3>Nothing to declare</h3>
        {% endfor %}
    </div>
</div>
{% endblock %}
